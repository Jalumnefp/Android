<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/car_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAR DIALOG"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:paddingBottom="10sp"
        android:paddingTop="5sp"
        android:background="?attr/colorSecondary" />

    <EditText
        android:id="@+id/create_brand_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/car_brand_hint" />

    <EditText
        android:id="@+id/create_model_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/car_model_hint" />

    <EditText
        android:id="@+id/create_photo_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/car_photo_hint" />

</LinearLayout>